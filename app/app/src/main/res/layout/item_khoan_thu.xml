<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="12dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_khoan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:text="Tên Khoản Thu"
            android:textColor="#D50000"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/btn_edit_loai_thu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/btn_delete_loai_thu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="Người thu:" />
        <TextView
            android:id="@+id/tv_name_thu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Ngày thu:" />
        <TextView
            android:id="@+id/tv_date_hien"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Số tiền:" />

        <TextView
            android:id="@+id/tv_moneny"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:text="Tên loại:" />

        <TextView
            android:id="@+id/tv_ten_loai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="100dp"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Note:" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
